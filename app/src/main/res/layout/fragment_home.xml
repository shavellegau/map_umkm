<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tuku_bg"
    tools:context=".HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerViewPager"
                android:layout_width="0dp"
                android:layout_height="250dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/main_content_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="45dp"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:layout_marginHorizontal="16dp"
                        android:gravity="center_vertical"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingHorizontal="4dp">
                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/ic_cup_kopi"
                                android:background="@drawable/circle_brown_bg"
                                android:padding="8dp"
                                android:contentDescription="Tetangga Tuku"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tetangga Tuku"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/tuku_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="520/1.000 XP"
                                android:textSize="10sp"
                                android:textColor="@color/text_bantuan"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingHorizontal="4dp">
                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/ic_point"
                                android:background="@drawable/circle_brown_bg"
                                android:padding="8dp"
                                android:contentDescription="Tuku Point"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tuku Point"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/tuku_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25.000 Points"
                                android:textSize="10sp"
                                android:textColor="@color/text_bantuan"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingHorizontal="4dp">
                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/ic_subscription"
                                android:background="@drawable/circle_brown_bg"
                                android:padding="8dp"
                                android:contentDescription="Subscription"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Subscription"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/tuku_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 Subscription"
                                android:textSize="10sp"
                                android:textColor="@color/text_bantuan"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="1dp"
                        android:weightSum="2">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/voucher_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="12dp">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_voucher"
                                    android:contentDescription="Voucher Kamu"
                                    app:tint="@color/text_primary"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="8dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Voucher Kamu"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/tuku_dark"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="15 Voucher"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_bantuan"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/referral_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="12dp">
                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:contentDescription="Referral"
                                    android:src="@drawable/ic_referral"
                                    app:tint="@color/text_primary" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="8dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Referral"
                                        android:textColor="@color/tuku_dark"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Undang Temanmu"
                                        android:textColor="@color/text_bantuan"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buat Pesanan Sekarang"
                        android:textColor="@color/tuku_dark"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="24dp"
                        android:layout_marginHorizontal="16dp" />

                    <!-- [INI BAGIAN YANG PENTING] -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/orderNowCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/icon_location"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_location_pin"
                                app:tint="@color/tuku_dark"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:id="@+id/tv_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kedoya"
                                android:textColor="@color/tuku_dark"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_toEndOf="@id/icon_location"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:id="@+id/btn_ubah_lokasi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ubah"
                                android:textColor="@color/orange_button"
                                android:textStyle="bold"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="?attr/selectableItemBackground"
                                android:padding="8dp"/>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:weightSum="2">
                        <Button
                            android:id="@+id/btn_take_away"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:backgroundTint="@color/tuku_primary"
                            android:text="TAKE AWAY"
                            android:textColor="@color/white"/>

                        <Button
                            android:id="@+id/btn_delivery"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:backgroundTint="@color/tuku_accent"
                            android:text="DELIVERY"
                            android:textColor="@color/white"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Our Newest Menu"
                        android:textColor="@color/tuku_dark"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="24dp"
                        android:layout_marginHorizontal="16dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/newestMenuCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        android:visibility="gone"
                        tools:visibility="visible">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">
                            <ImageView
                                android:id="@+id/ivNewestMenuImage"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                tools:src="@drawable/logo_tuku"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">
                                <TextView
                                    android:id="@+id/tvNewestMenuName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/tuku_dark"
                                    tools:text="Bolu Gula Aren"/>
                                <TextView
                                    android:id="@+id/tvNewestMenuPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="@color/text_secondary"
                                    tools:text="Rp 13.000"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginHorizontal="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="24dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hi, Abdul !"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/tuku_dark"/>

                    <ImageButton
                        android:id="@+id/btnNotification"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_notification"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Notifikasi"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tuku_bg"
    tools:context=".HomeFragment">

    <!-- Konten Scroll (Main Content) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp"> <!-- Beri padding bawah agar tidak tertutup bottom bar -->

            <!-- Banner ViewPager -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerViewPager"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

            <!-- CardView untuk konten utama -->
            <androidx.cardview.widget.CardView
                android:id="@+id/main_content_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-40dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <!-- Card Info User -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/user_info_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/tv_user_greeting"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                tools:text="Hi, Teman Tuku !"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/tuku_dark"/>
                            <ImageButton
                                android:id="@+id/btn_notification"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/ic_notification"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Notifications"
                                app:tint="@color/tuku_dark"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Card Poin & Subscription (Bisa Anda tambahkan kembali jika perlu) -->


                    <!-- Judul Menu -->
                    <TextView
                        android:id="@+id/tv_menu_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pesan Menu Favoritmu"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/tuku_dark"
                        android:layout_marginTop="24dp"
                        android:layout_marginStart="16dp"/>

                    <!-- RecyclerView Menu -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:padding="8dp"
                        tools:listitem="@layout/item_menu"
                        tools:itemCount="4"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- [BARU] BOTTOM BAR UNTUK PESANAN -->
    <LinearLayout
        android:id="@+id/order_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/tuku_primary"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:elevation="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_total_items_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="1 Item" />

            <TextView
                android:id="@+id/tv_total_price_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Rp23.000" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_view_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Pesanan"
            android:backgroundTint="@color/tuku_accent"
            android:textColor="@android:color/white"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="end" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

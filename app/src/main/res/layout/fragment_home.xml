<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tuku_bg"
    tools:context=".HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerViewPager"
                android:layout_width="0dp"
                android:layout_height="260dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/main_content_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="45dp"
                    android:paddingBottom="80dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp"
                        android:layout_marginHorizontal="16dp"
                        android:gravity="center_vertical"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/btn_tuku_point"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingHorizontal="4dp">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/ic_cup_kopi"
                                android:background="@drawable/circle_brown_bg"
                                android:padding="8dp"
                                android:contentDescription="Belahan Jiwa"/>

                            <TextView
                                android:id="@+id/tvLevelValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bronze"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:textStyle="bold"
                                android:textColor="@color/tuku_dark"/>

                            <ProgressBar
                                android:id="@+id/progressBarExp"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:layout_marginHorizontal="8dp"
                                android:layout_marginTop="2dp"
                                android:progressTint="#D4AF37"
                                android:progress="0"
                                android:max="100"/>

                            <TextView
                                android:id="@+id/tvExpValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0/100 XP"
                                android:textSize="9sp"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/text_bantuan"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingHorizontal="4dp">

                            <ImageView
                                android:id="@+id/iv_tuku_point"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/ic_point"
                                android:background="@drawable/circle_brown_bg"
                                android:padding="8dp"
                                android:contentDescription="Tuku Point"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tuku Point"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/tuku_dark"/>

                            <TextView
                                android:id="@+id/tvTukuPointValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 Points"
                                android:textSize="10sp"
                                android:textColor="@color/text_bantuan"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:paddingHorizontal="4dp">
                            <ImageView
                                android:id="@+id/iv_kode_redeem"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:src="@drawable/ic_subscription"
                                android:background="@drawable/circle_brown_bg"
                                android:padding="8dp"
                                android:contentDescription="KodeRedeem"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="KodeRedeem"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/tuku_dark"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tukarkan Kode"
                                android:textSize="10sp"
                                android:textColor="@color/text_bantuan"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="1dp"
                        android:weightSum="2">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/voucher_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="12dp">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_voucher_black"
                                    android:contentDescription="Voucher Kamu"
                                    app:tint="@color/text_primary"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="8dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Voucher Kamu"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/tuku_dark"/>
                                    <TextView
                                        android:id="@+id/tvVoucherCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="15 Voucher"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_bantuan"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/referral_card"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:padding="12dp">
                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:contentDescription="Referral"
                                    android:src="@drawable/ic_referral"
                                    app:tint="@color/text_primary" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Referral"
                                        android:textColor="@color/tuku_dark"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Undang Teman"
                                        android:textColor="@color/text_bantuan"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_buat_pesanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buat Pesanan Sekarang"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/tuku_dark"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/location_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_location"
                                android:contentDescription="Location Icon"
                                app:tint="@color/tuku_dark"/>
                            <TextView
                                android:id="@+id/tv_current_location"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Kedoya"
                                android:textSize="14sp"
                                android:textColor="@color/tuku_dark"/>
                            <TextView
                                android:id="@+id/btn_change_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ubah"
                                android:textColor="@color/tuku_accent"
                                android:textStyle="bold"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/takeaway_delivery_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="24dp"
                        android:weightSum="2">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/take_away_card"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/tuku_primary">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_walk"
                                    app:tint="@color/white"
                                    android:contentDescription="Take Away"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TAKE AWAY"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/delivery_card"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/tuku_accent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_takeaway"
                                    app:tint="@color/white"
                                    android:contentDescription="Delivery"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DELIVERY"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBudgetOptimizer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="24dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:text="ðŸ¤– Cari Menu Sesuai Kantong"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#3E2723"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="Mau jajan berapa hari ini?"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvBudgetDisplay"
                                android:text="Rp 20.000"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#3E2723"
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <com.google.android.material.slider.Slider
                                android:id="@+id/sliderBudget"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:valueFrom="5000"
                                android:valueTo="50000"
                                android:stepSize="1000"
                                android:value="20000"/>

                            <Button
                                android:id="@+id/btnCariRekomendasi"
                                android:text="CARI REKOMENDASI TERBAIK"
                                android:backgroundTint="#3E2723"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <LinearLayout
                                android:id="@+id/layoutResultML"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="16dp"
                                android:padding="10dp"
                                android:background="#F5F5F5"
                                android:visibility="gone"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/ivResultImage"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/placeholder_image"
                                    android:layout_marginEnd="12dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:text="âœ¨ AI Top Pick âœ¨"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        android:textColor="#FFC107"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:id="@+id/tvResultName"
                                        android:text="Nama Menu"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:id="@+id/tvResultPrice"
                                        android:text="Rp 0"
                                        android:textSize="14sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_tuku_care_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="24dp"
                        android:text="TUKU Care"
                        android:textColor="@color/tuku_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tuku_care_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <ImageView
                            android:id="@+id/iv_tuku_care_image"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:contentDescription="TUKU Care Banner"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tuku_care" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/user_info_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/main_content_card"
                app:layout_constraintBottom_toTopOf="@+id/main_content_card">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="13dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_user_greeting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hi, User !"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/tuku_dark"/>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/btn_notification"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_notification"
                            android:background="@android:color/transparent"
                            android:contentDescription="Notifications"
                            app:tint="@color/tuku_accent"
                            android:scaleType="centerInside" />

                        <TextView
                            android:id="@+id/tvNotificationCount"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:text="0"
                            android:textSize="10sp"
                            android:textColor="@android:color/white"
                            android:background="@drawable/bg_notification_badge"
                            android:gravity="center"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="-2dp"
                            android:layout_marginEnd="-2dp"
                            android:padding="1dp"
                            android:visibility="gone"
                            tools:visibility="visible"
                            tools:text="8"/>
                    </FrameLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
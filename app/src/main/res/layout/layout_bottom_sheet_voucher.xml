<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingHorizontal="24dp"
    android:paddingBottom="24dp"
    android:paddingTop="12dp">

    <View
        android:layout_width="48dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="#E0E0E0"
        android:backgroundTint="#CCCCCC"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tvSheetTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diskon Ongkir"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#3E2723"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_voucher"
            android:layout_marginEnd="12dp"
            android:tint="#3E2723"/>
        <TextView
            android:id="@+id/tvSheetCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TUKUHEMAT"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textColor="#3E2723"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Syarat &amp; Ketentuan"
        android:textStyle="bold"
        android:textColor="#3E2723"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvSheetTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Minimal pembelian Rp 50.000\n2. Berlaku untuk semua metode pembayaran\n3. Tidak dapat digabung promo lain"
        android:textSize="14sp"
        android:lineSpacingExtra="6dp"
        android:textColor="#757575"
        android:layout_marginBottom="32dp"/>

</LinearLayout>
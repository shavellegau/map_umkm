<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tuku_bg">

    <!-- Tombol Back -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_margin="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Kembali"
        android:src="@drawable/ic_arrow_back"
        android:tint="@color/tuku_dark" />

    <!-- Konten Scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnBack"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Gambar produk -->
            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"
                android:background="@color/tuku_primary" />

            <!-- Nama produk -->
            <TextView
                android:id="@+id/tvName"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Kategori -->
            <TextView
                android:id="@+id/tvCategory"
                android:textSize="14sp"
                android:textColor="@color/text_bantuan"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Deskripsi -->
            <TextView
                android:id="@+id/tvDescription"
                android:textSize="16sp"
                android:textColor="@color/tuku_dark"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Pilihan suhu -->
            <RadioGroup
                android:id="@+id/rgTemperature"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <RadioButton
                    android:id="@+id/rbHot"
                    android:text="Hot"
                    android:checked="true"
                    android:textColor="@color/text_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rbIced"
                    android:text="Iced"
                    android:textColor="@color/text_primary"
                    android:layout_marginStart="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <!-- Harga -->
            <TextView
                android:id="@+id/tvPrice"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/tuku_primary"
                android:layout_marginBottom="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Catatan -->
            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tambahkan catatan (maks. 50 kata)"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:gravity="top|start"
                android:padding="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_bantuan"
                android:backgroundTint="@color/tuku_primary"
                android:layout_marginBottom="16dp" />

            <!-- Tombol tambah -->
            <Button
                android:id="@+id/btnAddToCart"
                android:text="Tambah ke Keranjang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/tuku_primary"
                android:textColor="@color/tuku_bg"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Favorit -->
            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_favorite_border"
                android:layout_margin="8dp"
                android:contentDescription="Favorite"
                android:tint="@color/tuku_accent" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

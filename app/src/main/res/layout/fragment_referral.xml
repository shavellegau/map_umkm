<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tuku_bg"
    tools:context=".ui.referral.ReferralFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@color/tuku_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent"
            app:tint="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="Tombol Kembali" />

        <TextView
            android:id="@+id/tv_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Referral"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/btn_back"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            android:layout_marginStart="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_referral_info"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Referral Kamu"
            android:textColor="@android:color/white"
            app:cornerRadius="20dp"
            app:strokeColor="@android:color/white"
            app:strokeWidth="1dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingVertical="4dp"
            app:icon="@drawable/ic_info"
            app:iconTint="@android:color/white"
            app:iconGravity="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_back"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/iv_promo_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_add_button"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintBottom_toBottomOf="@id/header_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="-50dp"
            android:elevation="2dp"
            android:contentDescription="Gambar Promo Referral" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="60dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <TextView
            android:id="@+id/tv_discount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dapatkan Diskon 50%"
            android:textColor="@color/tuku_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_promo_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dapatkan Voucher Discount setiap mengajak teman kamu menggunakan aplikasi TUKU+"
            android:textColor="@color/tuku_dark_grey"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_discount_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tv_share_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bagikan Kode Referral Dibawah"
            android:textColor="@color/tuku_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_promo_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_referral_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_share_prompt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:paddingStart="30dp"
                android:paddingEnd="20dp"
                android:paddingVertical="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_referral_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHAFA9"
                    android:textSize="22sp"
                    android:textColor="@color/tuku_dark"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"
                    tools:text="ABCDE123"/>

                <ImageButton
                    android:id="@+id/btn_copy_code"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_copy"
                    android:background="@android:color/transparent"
                    app:tint="@color/tuku_dark_grey"
                    android:contentDescription="Salin Kode" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_share_referral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Share"
            android:padding="14dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/tuku_primary"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:backgroundTint="@color/tuku_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Info User -->
        <TextView
            android:id="@+id/tv_order_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            tools:text="Budi (budi@email.com)" />

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_bantuan"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            tools:text="12 Okt 2025, 10:30" />

        <!-- Daftar Item -->
        <TextView
            android:id="@+id/tv_order_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tuku_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            tools:text="Es Kopi Susu, Americano" />

        <!-- Total -->
        <TextView
            android:id="@+id/tv_order_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tuku_primary"
            android:textStyle="bold"
            tools:text="Total: Rp 55.000"
            android:layout_marginTop="8dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tuku_accent"
            android:textStyle="italic|bold"
            android:layout_marginTop="8dp"
            tools:text="Status: Menunggu Konfirmasi" />

        <!-- Tombol -->
        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btn_konfirmasi_pembayaran"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Konfirmasi Bayar"
                android:backgroundTint="@color/tuku_primary"
                android:textColor="@android:color/white"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btn_proses_pesanan"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Proses"
                android:textColor="@color/tuku_primary"
                app:strokeColor="@color/tuku_primary" />

            <Button
                android:id="@+id/btn_selesaikan_pesanan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Selesaikan"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/tuku_dark" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

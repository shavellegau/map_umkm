<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDF6EF"
    tools:context=".AlamatFragment">

    <!-- Header dengan Tombol Back dan Judul -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Kembali"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/tuku_dark" />

        <TextView
            android:id="@+id/tvTitleAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Alamat Pengiriman"
            android:textColor="#3A2A1A"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Konten utama (daftar alamat atau teks kosong) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAddresses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            tools:listitem="@layout/item_address" />

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:text="Anda belum punya alamat tersimpan."
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnTambahAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="#A36C45"
            android:paddingVertical="12dp"
            android:text="+ Tambah Alamat Baru"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </FrameLayout>

    <!-- [FIXED] Tombol Tambah Alamat Baru dipindahkan ke sini, di luar FrameLayout -->

</LinearLayout>

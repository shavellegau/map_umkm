<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF6EF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="48dp"> <!-- Tambah paddingTop biar aman dari kamera -->

        <!-- Tombol Back dan Judul -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:contentDescription="Kembali"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/tvTitleAlamat"
                android:text="Alamat Pengiriman"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#3A2A1A"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <!-- Kartu Alamat Utama -->
        <LinearLayout
            android:id="@+id/cardUtama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_card"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:text="Rumah"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#3A2A1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Utama"
                    android:background="@drawable/bg_label_utama"
                    android:textColor="#FFFFFF"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="Ferry"
                android:layout_marginTop="4dp"
                android:textColor="#3A2A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Jl. Bahagia No 17, Jakarta Selatan"
                android:textColor="#3A2A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/btnEdit1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_edit"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Edit" />

                <ImageView
                    android:id="@+id/btnDelete1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Hapus" />
            </LinearLayout>
        </LinearLayout>

        <!-- Kartu Alamat Kedua -->
        <LinearLayout
            android:id="@+id/cardKedua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_card"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:text="Rumah"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#3A2A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="0812-3456-7890"
                android:layout_marginTop="4dp"
                android:textColor="#3A2A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Jl. Bahagia No 17, Jakarta Selatan"
                android:textColor="#3A2A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/btnEdit2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_edit"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Edit" />

                <ImageView
                    android:id="@+id/btnDelete2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Hapus" />
            </LinearLayout>
        </LinearLayout>

        <!-- Kartu Pesanan Favorit -->
        <LinearLayout
            android:id="@+id/cardFavorit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_card"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:text="Pesanan Favoritku"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#3A2A1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Rp 45.000"
                    android:textStyle="bold"
                    android:textColor="#3A2A1A"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="Ferry"
                android:layout_marginTop="4dp"
                android:textColor="#3A2A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Jl. Bahagia No 17, Jakarta Selatan"
                android:textColor="#3A2A1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Tombol Tambah Alamat Baru -->
        <Button
            android:id="@+id/btnTambahAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Tambah Alamat Baru"
            android:layout_marginTop="24dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#A36C45"
            android:paddingVertical="12dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>

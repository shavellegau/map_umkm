<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F6F1">

    <ScrollView
        android:id="@+id/scrollMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Profile -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:background="@drawable/bg_circle"
                        android:scaleType="centerCrop"
                        android:contentDescription="Foto Profil" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hi, Budi Santoso"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tvMember"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gold Member â€¢ 5480 Points"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnEditProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_menu_edit"
                        android:tint="#444"
                        android:contentDescription="Edit Profil" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Aktivitas Saya -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#3B2C26">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aktivitas Saya"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="12dp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false"
                        android:rowOrderPreserved="false">

                        <!-- Pesanan Saya -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardPesanan"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:layout_columnWeight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@android:drawable/ic_menu_agenda"
                                    android:tint="#3B2C26" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pesanan Saya"
                                    android:textSize="14sp"
                                    android:textColor="#000000" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Wishlist -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardWishlist"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:layout_columnWeight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@android:drawable/btn_star_big_off"
                                    android:tint="#3B2C26" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wishlist"
                                    android:textSize="14sp"
                                    android:textColor="#000000" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Ulasan -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardUlasan"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:layout_columnWeight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@android:drawable/ic_menu_edit"
                                    android:tint="#3B2C26" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ulasan"
                                    android:textSize="14sp"
                                    android:textColor="#000000" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Voucher Saya -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardVoucher"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_margin="8dp"
                            android:layout_columnWeight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@android:drawable/ic_menu_gallery"
                                    android:tint="#3B2C26" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Voucher Saya"
                                    android:textSize="14sp"
                                    android:textColor="#000000" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Menu Tambahan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/menuPengaturanAkun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Pengaturan Akun"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:background="@drawable/bg_item_menu" />

                <TextView
                    android:id="@+id/menuAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Alamat Pengiriman"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:background="@drawable/bg_item_menu" />

                <TextView
                    android:id="@+id/menuBantuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Pusat Bantuan &amp; S&amp;K"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:background="@drawable/bg_item_menu" />
            </LinearLayout>

            <!-- Tombol Logout -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="Logout"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="12dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

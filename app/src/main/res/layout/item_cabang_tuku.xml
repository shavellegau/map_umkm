<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_location_pin"
                app:tint="@color/tuku_primary" />

            <TextView
                android:id="@+id/tv_nama_cabang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="@color/tuku_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Kopi Tuku — Outlet Kedoya" />

            <TextView
                android:id="@+id/tv_status_buka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_status_buka"
                tools:text="Buka"
                tools:textColor="@color/white"
                tools:backgroundTint="#4CAF50"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_alamat_cabang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            tools:text="Jl. Kedoya Raya No.12, Kedoya, Kebon Jeruk, Jakarta Barat 11520" />

        <TextView
            android:id="@+id/tv_detail_cabang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            tools:text="Detail: +62 21 555-0101; WiFi, Parkir motor &amp; mobil, Area smoking, Takeaway &amp; Delivery." />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_jam_buka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="@color/tuku_primary"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="07:00–22:00" />

            <Button
                android:id="@+id/btn_pilih_cabang"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/orange_button"
                android:paddingHorizontal="16dp"
                android:text="Pilih Cabang"
                android:textAllCaps="false"
                android:textColor="@color/tuku_dark"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

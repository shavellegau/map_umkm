<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F5F1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Logo Tuku / Gambar Kopi -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo_tuku"
            android:layout_marginBottom="24dp"
            android:contentDescription="Logo" />

        <!-- Judul -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Tuku"
            android:textColor="#3E2723"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enjoy your favorite coffee!"
            android:textColor="#6D4C41"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_edittext"
            android:paddingStart="48dp"
            android:padding="14dp"
            android:textColor="#3E2723"
            android:textColorHint="#A1887F"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/iconEmail"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_email"
            android:tint="#6D4C41"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-54dp"
            android:layout_gravity="start" />


        <!-- Password -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/bg_edittext"
            android:paddingStart="48dp"
            android:padding="14dp"
            android:textColor="#3E2723"
            android:textColorHint="#A1887F"
            android:layout_marginBottom="24dp" />

        <ImageView
            android:id="@+id/iconLock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_lock"
            android:tint="#6D4C41"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-54dp"
            android:layout_gravity="start" />


        <!-- Tombol Login -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@drawable/bg_button_brown"
            android:textColor="@android:color/white"
            android:padding="14dp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Tombol Register -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:background="@drawable/bg_button_outline"
            android:textColor="#6D4C41"
            android:padding="14dp" />

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tuku_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Logo Tuku / Gambar Kopi -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo_tuku_rill"
            android:layout_marginBottom="24dp"
            android:contentDescription="Logo" />

        <!-- Judul -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Tuku"
            android:textColor="@color/tuku_dark"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enjoy your favorite coffee!"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- Email -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_edittext"
                android:paddingStart="48dp"
                android:padding="14dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />

            <ImageView
                android:id="@+id/iconEmail"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_email"
                android:tint="@color/tuku_dark"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>

        <!-- Password -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/bg_edittext"
                android:paddingStart="48dp"
                android:padding="14dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />

            <ImageView
                android:id="@+id/iconLock"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_lock"
                android:tint="@color/tuku_dark"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>

        <!-- Tombol Login -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:backgroundTint="@color/tuku_primary"
            android:textColor="@android:color/white"
            android:padding="14dp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Tombol Register -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:backgroundTint="@color/tuku_dark"
            android:textColor="@android:color/white"
            android:padding="14dp" />

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF4EB"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:text="Pesanan Saya"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3E2723"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Tabs -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF6E9"
            android:padding="6dp"
            android:weightSum="2"
            android:layout_marginBottom="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnPesananAktif"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Pesanan Aktif (1)"
                android:backgroundTint="#D7B98E"
                android:textColor="#FFFFFF" />


            <Button
                android:id="@+id/btnRiwayatPesanan"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Riwayat Pesanan"
                android:backgroundTint="#FFFFFF"
                android:textColor="#D7B98E" />
        </LinearLayout>

        <!-- Layout Pesanan Aktif -->
        <LinearLayout
            android:id="@+id/layoutPesananAktif"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Progress Circle + Mug -->
            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center">

                <!-- Progress Circle -->
                <ProgressBar
                    android:id="@+id/progressPesanan"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:progress="70"
                    android:max="100"
                    android:indeterminate="false"
                    android:rotation="-90"
                    android:progressDrawable="@drawable/circular_progress_drawable"
                    android:layout_gravity="center" />

                <!-- Mug Icon -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_coffee_cup"
                    android:layout_gravity="center" />
            </FrameLayout>

            <TextView
                android:text="Status: Sedang Dibuat"
                android:textColor="#3E2723"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Estimasi siap dalam 5 menit"
                android:textColor="#7B6E5B"
                android:gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="1x Es Kopi Susu Tetangga, 1x Donat Kampoeng, dan 2 lainnya"
                android:textColor="#5D4037"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="ID Pesanan: #TK-12345 | Total: Rp 54.000"
                android:textColor="#7B6E5B"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:text="Lacak Pesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D7B98E"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <!-- Layout Riwayat Pesanan -->
        <LinearLayout
            android:id="@+id/layoutRiwayatPesanan"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_bg"
            android:padding="16dp">

            <TextView
                android:text="Selesai"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Toko Kopi Tuku - Cipete | 08 Okt 2023"
                android:textColor="#3E2723"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Es Kopi Susu Tetangga, Roti Cokelat Klasik... | Rp 45.000"
                android:textColor="#5D4037"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:text="Pesan Lagi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#D7B98E"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:text="Beri Penilaian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#D7B98E" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:backgroundTint="#FFF8E1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvVoucherTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diskon 20% untuk Minuman Kopi"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#3E2723" />

        <TextView
            android:id="@+id/tvVoucherCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode: TUKU20"
            android:textSize="14sp"
            android:textColor="#6D4C41"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvVoucherExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berlaku hingga 31 Okt 2025"
            android:textSize="12sp"
            android:textColor="#8D6E63"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btnUseVoucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gunakan"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#795548"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

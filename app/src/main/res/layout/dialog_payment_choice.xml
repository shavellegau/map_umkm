<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog_rounded"> <!-- Menggunakan background yang sudah ada -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Metode Pembayaran"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/tuku_dark"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <!-- Opsi Bayar dengan QRIS -->
    <Button
        android:id="@+id/btnPayWithQris"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bayar dengan QRIS"
        android:backgroundTint="@color/tuku_primary"
        app:icon="@drawable/ic_qris"
        app:iconGravity="textStart"
        android:layout_marginBottom="12dp"
        android:padding="12dp"/>

    <!-- Opsi Bayar Tunai (Cash) -->
    <Button
        android:id="@+id/btnPayWithCash"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bayar Tunai (di Kasir)"
        app:strokeColor="@color/tuku_primary"
        android:textColor="@color/tuku_primary"
        app:icon="@drawable/ic_cash"
        app:iconGravity="textStart"
        android:padding="12dp"/>

</LinearLayout>

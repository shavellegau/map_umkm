<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF6EF"
    tools:context=".PaymentFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_payment"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#A36C45"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Ringkasan Pesanan"
            app:titleTextColor="@android:color/white"
            app:theme="@style/ThemeOverlay.MaterialComponents.ActionBar" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilihan Pengambilan"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#3E2723"
                android:layout_marginBottom="12dp"/>

            <RadioGroup
                android:id="@+id/rg_order_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/rb_take_away"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ambil di Tempat"
                    android:layout_marginEnd="24dp"/>

                <RadioButton
                    android:id="@+id/rb_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pesan Antar"
                    android:checked="true"/>
            </RadioGroup>

            <LinearLayout
                android:id="@+id/layout_address_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dikirim ke:"
                    android:textSize="12sp"
                    android:textColor="#888888"/>

                <TextView
                    android:id="@+id/tv_delivery_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Memuat alamat..."
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_change_address_manual"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="CARI DI PETA"
                        android:textSize="12sp"
                        app:strokeColor="#A36C45"
                        android:textColor="#A36C45"/>

                    <Button
                        android:id="@+id/btn_select_saved_address_list"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="DAFTAR ALAMAT"
                        android:textSize="12sp"
                        app:strokeColor="#A36C45"
                        android:textColor="#A36C45"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Pesanan"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#3E2723"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_order_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                tools:listitem="@layout/item_cart_product" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/bg_rounded_white"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gunakan Poin"
                        android:textStyle="bold"
                        android:textColor="#3E2723"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Untuk Berhemat"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tvUserPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saldo Poin: 0"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher &amp; Promo"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#3E2723"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/layout_voucher_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_rounded_white"
                android:padding="16dp"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_voucher"
                    app:tint="#A36C45"/>

                <TextView
                    android:id="@+id/tv_selected_voucher_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Pilih Voucher / Diskon"
                    android:textSize="14sp"
                    android:textColor="#3E2723"/>

                <ImageView
                    android:id="@+id/btn_remove_voucher"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close"
                    android:visibility="gone"
                    android:padding="4dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="#888888"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_discount_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:visibility="gone">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Potongan Diskon" android:textColor="#4CAF50"/>
                <TextView android:id="@+id/tvDiscountInfo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="-Rp 0" android:textColor="#4CAF50"/>
            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Subtotal" android:textColor="#888888"/>
                <TextView android:id="@+id/tvSubtotal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="Rp 0" android:textColor="@android:color/black"/>
            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Pajak (11%)" android:textColor="#888888"/>
                <TextView android:id="@+id/tvTax" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="Rp 0" android:textColor="@android:color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_shipping_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:visibility="visible">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ongkos Kirim" android:textColor="#888888"/>
                <TextView android:id="@+id/tvShippingCost" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="Rp 0" android:textColor="@android:color/black"/>
            </RelativeLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" android:layout_marginVertical="8dp"/>

            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Pembayaran" android:textStyle="bold" android:textSize="16sp" android:textColor="#3E2723"/>
                <TextView android:id="@+id/tvTotalPayment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:text="Rp 0" android:textStyle="bold" android:textSize="16sp" android:textColor="#3E2723"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_bottom_sheet_rounded"
        android:padding="16dp"
        android:elevation="8dp">

        <Button
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Bayar Sekarang"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            android:backgroundTint="#A36C45"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
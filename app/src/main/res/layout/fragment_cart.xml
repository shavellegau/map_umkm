<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tuku_bg"
    tools:context=".CartFragment">

    <!-- penting: supaya di atas navbar -->
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/tuku_primary"
        android:elevation="8dp"
        android:padding="12dp"
        android:layout_marginBottom="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Bagian Subtotal, Pajak, dan Total Bayar -->
        <LinearLayout
            android:id="@+id/layout_total_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_marginBottom="8dp"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subtotal: Rp0"
                android:textSize="16sp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/tvTax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pajak (10%): Rp0"
                android:textSize="16sp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/tvTotalPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Bayar: Rp0"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Baris bawah: Total Harga dan Tombol Lihat Pesanan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Kontainer Total Harga -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Harga"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Tombol Lihat Pesanan -->
            <Button
                android:id="@+id/btn_view_order"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Lihat Pesanan (0)"
                android:backgroundTint="@color/tuku_accent"
                android:textColor="@android:color/white"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginEnd="0dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Konten Scrollable: Berhenti tepat di atas layout_bottom -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Judul -->
            <TextView
                android:id="@+id/tv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TUKU COFFEE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/tuku_primary" />

            <!-- Search Bar -->
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_search"
                android:drawableStart="@android:drawable/ic_search_category_default"
                android:drawablePadding="8dp"
                android:hint="Cari menu..."
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp" />

            <!-- RecyclerViews -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingHorizontal="8dp"
                android:scrollbars="none" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:overScrollMode="never" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

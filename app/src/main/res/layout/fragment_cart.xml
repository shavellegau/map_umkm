<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tuku_bg"
    tools:context=".CartFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?attr/actionBarSize"
        app:cardElevation="16dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/tuku_primary"
            android:padding="12dp">

            <LinearLayout
                android:id="@+id/layout_total_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/bg_rounded_white_small"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subtotal"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tvSubtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Rp55.000"
                        android:textColor="@color/tuku_dark"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pajak (11%)"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/tvTax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Rp6.050"
                        android:textColor="@color/tuku_dark"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginVertical="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total Bayar"
                        android:textColor="@color/tuku_dark"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvTotalPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Rp61.050"
                        android:textColor="@color/tuku_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textSize="11sp"
                        android:textColor="#D3D3D3" />
                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Rp61.050"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_view_order"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="Lihat Pesanan"
                    android:textColor="@color/tuku_primary"
                    android:backgroundTint="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:paddingHorizontal="24dp"
                    app:cornerRadius="22dp"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TUKU COFFEE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="12dp"
                android:textColor="@color/tuku_primary" />

            <FrameLayout
                android:id="@+id/layout_toggle_container"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_mode_selection"
                android:padding="4dp">

                <!-- INDICATOR PUTIH YANG BERGERAK -->
                <View
                    android:id="@+id/view_toggle_selector"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:background="@drawable/bg_toggle_selector" />

                <!-- TOMBOL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_take_away"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Take Away"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/black"
                        app:icon="@drawable/ic_walk"
                        app:iconSize="16dp"
                        app:iconPadding="6dp"
                        app:iconTint="@color/black"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                    <Button
                        android:id="@+id/btn_delivery"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Delivery"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/black"
                        app:icon="@drawable/ic_takeaway"
                        app:iconSize="16dp"
                        app:iconPadding="6dp"
                        app:iconTint="@color/black"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

                </LinearLayout>

            </FrameLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="1dp"
                app:strokeColor="#EEE">

                <RelativeLayout
                    android:id="@+id/layout_branch_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/iv_store_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        app:tint="@color/tuku_primary" />

                    <TextView
                        android:id="@+id/tv_selected_branch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_store_icon"
                        android:layout_toStartOf="@+id/btn_change_branch"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/tuku_dark"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="RUKO GREEN LAKE CITY" />

                    <TextView
                        android:id="@+id/btn_change_branch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="Ubah"
                        android:textSize="12sp"
                        android:textColor="@color/tuku_accent"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bg_search"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="10dp"
                android:drawableTint="@color/text_bantuan"
                android:hint="Cari menu..."
                android:textSize="14sp"
                android:inputType="text"
                android:maxLines="1"
                android:paddingHorizontal="16dp"
                android:paddingVertical="0dp"
                android:imeOptions="actionSearch"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingHorizontal="16dp"
                android:scrollbars="none" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:clipToPadding="false"
                android:overScrollMode="never" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
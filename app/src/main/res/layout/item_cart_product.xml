<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/bg_card"
    android:layout_marginVertical="4dp">

    <ImageView
        android:id="@+id/ivProductImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/banner_kopi"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_rounded_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProductName"
            android:text="Nama Produk"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/tuku_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvProductPrice"
            android:text="Rp10.000"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catatan: Tidak pakai gula"
            android:textColor="@color/text_bantuan"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            tools:text="Catatan: sedikit es" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnMinus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle_tuku"
                android:src="@drawable/ic_minus"
                android:contentDescription="Kurangi jumlah"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/tvQuantity"
                android:text="1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/tuku_dark"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btnPlus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle_tuku"
                android:src="@drawable/ic_add"
                android:contentDescription="Tambah jumlah"
                app:tint="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_delete"
        app:tint="@color/tuku_accent"
        android:layout_gravity="center_vertical" />
</LinearLayout>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background lingkaran -->
    <item>
        <shape
            android:shape="oval">
            <stroke
                android:width="6dp"
                android:color="#E8DCC5" />
        </shape>
    </item>

    <!-- Progress stroke -->
    <item>
        <clip android:clipOrientation="vertical" android:gravity="bottom">
            <shape
                android:shape="oval">
                <stroke
                    android:width="6dp"
                    android:color="#C7A674" />
            </shape>
        </clip>
    </item>
</layer-list>
